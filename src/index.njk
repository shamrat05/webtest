            <p class="section-subtitle">Thoughts on marketing, operations, and professional growth</p>
        </div>
        
        <div class="blog-grid" id="blog-grid-preview">
            {% for post in collections.posts | reverse | batch(3) | first %}
            <article class="blog-card">
                <a href="{{ post.url }}" class="blog-card-link">
                    <div class="blog-image">
                        <img src="{{ post.data.image }}" alt="{{ post.data.title }}" loading="lazy">
                        <div class="blog-category">{{ post.data.category }}</div>
                    </div>
                    <div class="blog-content">
                        <div class="blog-meta">
                            <span class="blog-date">{{ post.date | postDate }}</span>
                            <span class="blog-read-time">{{ post.content | readTime }}</span>
                        </div>
                        <h3>{{ post.data.title }}</h3>
                        <p>{{ post.data.description }}</p>
                        <div class="blog-link">Read More <i class="fas fa-arrow-right"></i></div>
                    </div>
                </a>
            </article>
            {% endfor %}
        </div>
        
        <div class="blog-explore-more">
            <a href="/blog/" class="btn btn-primary explore-more-btn">
                <span>Explore All Blog Posts</span>
                <i class="fas fa-arrow-right"></i>
