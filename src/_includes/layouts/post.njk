---
layout: layouts/base.njk
schema_type: BlogPosting
---
{% if schema_type == "BlogPosting" %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "{{ schema_type }}",
  "headline": "{{ title }}",
  "description": "{{ description }}",
  "image": "{{ image }}",
  "author": {
    "@type": "Person",
    "name": "Md. Shamrat Hossain",
    "url": "{{ site.url }}"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Md. Shamrat Hossain Portfolio",
    "logo": {
      "@type": "ImageObject",
      "url": "{{ site.url }}/assets/images/shamrat-profile.jpg"
    }
  },
  "datePublished": "{{ date | isoDate }}",
  "dateModified": "{{ date | isoDate }}",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ site.url }}{{ page.url }}"
  },
  "keywords": "{{ tags | default([]) | join(', ') }}",
  "articleSection": "{{ category | default('Blog') }}",
  "inLanguage": "en-US"
}
</script>
{% endif %}

<div class="blog-post-container">
    <div class="blog-post-wrapper">
        <article>
            <header class="blog-post-header">
                {% if category %}
                <div class="blog-post-category">{{ category }}</div>
                {% endif %}
                <h1 class="blog-post-title">{{ title }}</h1>
                <div class="blog-post-meta">
                    <div class="blog-post-meta-item">
                        <i class="fas fa-calendar"></i>
                        <span>{{ date | postDate }}</span>
                    </div>
                    <div class="blog-post-meta-item">
                        <i class="fas fa-clock"></i>
                        <span>{{ content | readTime }}</span>
                    </div>
                </div>
            </header>

            {% if image %}
            <img src="{{ image }}" alt="{{ title }}" class="blog-post-image">
            {% endif %}

            <div class="blog-post-content">
                {{ content | safe }}
            </div>

            <div class="blog-post-actions">
                <h3>Enjoyed this post?</h3>
                <a href="/#contact" class="back-to-blog">
                    <i class="fas fa-envelope"></i>
                    Get In Touch
                </a>
            </div>
        </article>
    </div>
</div>
