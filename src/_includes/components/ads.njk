<script>
/* Initialize AdSense ads */
(function() {
  try {
    (adsbygoogle = window.adsbygoogle || []).push({});
  } catch (e) {
    console.log('AdSense initialization error:', e);
  }
})();

/* Lazy load ads for better performance */
function loadAds() {
  const ads = document.querySelectorAll('.adsbygoogle');
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        try {
          (adsbygoogle = window.adsbygoogle || []).push({});
          observer.unobserve(entry.target);
        } catch (e) {
          console.log('AdSense lazy load error:', e);
        }
      }
    });
  }, {
    rootMargin: '100px'
  });

  ads.forEach(ad => observer.observe(ad));
}

// Initialize ads when DOM is loaded
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', loadAds);
} else {
  loadAds();
}

/* Block ads for users with ad blockers (optional) */
function detectAdBlocker() {
  const adBlocker = window.google_ad_loaded === undefined && window.google_ads_queue === undefined;
  
  if (adBlocker) {
    // Hide ad containers or show a message
    const adContainers = document.querySelectorAll('.ads-container');
    adContainers.forEach(container => {
      container.style.display = 'none';
    });
  }
}

// Check for ad blocker
setTimeout(detectAdBlocker, 1000);
</script>