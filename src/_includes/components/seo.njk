{# SEO and Open Graph Tags - Optimized for 2025 #}

{# Site Data #}
{% set siteTitle = "Md. Shamrat Hossain - Marketing & Operations Professional" %}
{% set siteDescription = "Expert marketing and operations professional with 2+ years experience in data analytics, strategic planning, and business development. MBA Marketing graduate specializing in digital transformation and stakeholder coordination." %}
{% set siteKeywords = "marketing, operations, data analytics, business development, strategic planning, MBA, Bangladesh, digital marketing, process optimization, stakeholder management" %}

{# Dynamic Title (60 chars max for SEO) #}
{% set pageTitle = title | default(siteTitle) %}
{% if pageTitle != siteTitle %}
  {% set pageTitle = pageTitle ~ " | Md. Shamrat Hossain" %}
{% endif %}

{# Dynamic Description (150-160 chars optimized) #}
{% set pageDescription = description | default(siteDescription) %}
{% if pageDescription | length > 160 %}
  {% set pageDescription = pageDescription | truncate(157) ~ "..." %}
{% endif %}

{# Dynamic Keywords #}
{% set pageKeywords = tags | default([]) | join(', ') %}
{% if pageKeywords %}
  {% set pageKeywords = pageKeywords ~ ", " ~ siteKeywords %}
{% else %}
  {% set pageKeywords = siteKeywords %}
{% endif %}

{# Title Tag (Primary element for SEO) #}
<title>{{ pageTitle }}</title>
<meta name="description" content="{{ pageDescription }}">

{# Canonical URL #}
<link rel="canonical" href="{{ site.url }}{{ page.url }}">

{# Open Graph / Facebook (1200x630px for optimal sharing) #}
<meta property="og:type" content="{% if schema_type %}article{% else %}website{% endif %}">
<meta property="og:url" content="{{ site.url }}{{ page.url }}">
<meta property="og:title" content="{{ pageTitle | escape }}">
<meta property="og:description" content="{{ pageDescription | escape }}">
<meta property="og:site_name" content="Md. Shamrat Hossain Portfolio">
<meta property="og:locale" content="en_US">
{% if image %}
<meta property="og:image" content="{{ image }}">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
<meta property="og:image:alt" content="{{ title | escape }}">
{% else %}
<meta property="og:image" content="{{ site.url }}/assets/images/imgs/shamrat-profile.jpg">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
<meta property="og:image:alt" content="Md. Shamrat Hossain - Marketing & Operations Professional">
{% endif %}

{# Twitter Card (Optimized for engagement) #}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@shamrat5">
<meta name="twitter:creator" content="@shamrat5">
<meta name="twitter:url" content="{{ site.url }}{{ page.url }}">
<meta name="twitter:title" content="{{ pageTitle | escape }}">
<meta name="twitter:description" content="{{ pageDescription | escape }}">
{% if image %}
<meta name="twitter:image" content="{{ image }}">
<meta name="twitter:image:alt" content="{{ title | escape }}">
{% else %}
<meta name="twitter:image" content="{{ site.url }}/assets/images/imgs/shamrat-profile.jpg">
<meta name="twitter:image:alt" content="Md. Shamrat Hossain - Marketing & Operations Professional">
{% endif %}

{# Advanced SEO Meta Tags #}
<meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
<meta name="googlebot" content="index, follow">
<meta name="keywords" content="{{ pageKeywords }}">

{# Author and Publisher Info #}
<meta name="author" content="Md. Shamrat Hossain">
<meta name="publisher" content="Md. Shamrat Hossain">

{# Language and Geographic Targeting #}
<meta name="language" content="English">
<meta name="geo.region" content="BD-13">
<meta name="geo.placename" content="Dhaka, Bangladesh">
<meta name="geo.position" content="23.8103;90.4125">
<meta name="ICBM" content="23.8103, 90.4125">

{# Additional Social Platforms #}
<meta property="article:author" content="https://linkedin.com/in/shamrat5">
<meta property="article:publisher" content="{{ site.url }}">
{% if date %}
<meta property="article:published_time" content="{{ date | isoDate }}">
<meta property="article:modified_time" content="{{ date | isoDate }}">
{% endif %}

{# LinkedIn Company Page #}
<meta property="linkedin:owner" content="https://linkedin.com/in/shamrat5">

{# Additional Structured Data Enhancements #}
<meta name="application-name" content="Md. Shamrat Hossain Portfolio">
<meta name="msapplication-TileColor" content="#0A84FF">
<meta name="theme-color" content="#0A84FF">

{# Preconnect for Performance #}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="preconnect" href="https://www.google-analytics.com">
<link rel="dns-prefetch" href="//pagead2.googlesyndication.com">

{# Dublin Core Metadata #}
<meta name="DC.title" content="{{ pageTitle | escape }}">
<meta name="DC.description" content="{{ pageDescription | escape }}">
<meta name="DC.creator" content="Md. Shamrat Hossain">
<meta name="DC.publisher" content="Md. Shamrat Hossain">
<meta name="DC.date" content="{{ date | default(2025-01-02) | isoDate }}">
<meta name="DC.type" content="{% if schema_type %}Text{% else %}Text{% endif %}">
<meta name="DC.format" content="text/html">
<meta name="DC.language" content="en">
<meta name="DC.coverage" content="Dhaka, Bangladesh">
