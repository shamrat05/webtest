{# Blog Post Schema #}
{% if schema_type == "BlogPosting" %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "{{ title }}",
  "description": "{{ description }}",
  "image": "{{ image }}",
  "author": {
    "@type": "Person",
    "name": "Md. Shamrat Hossain",
    "jobTitle": "Marketing & Operations Professional",
    "url": "{{ site.url }}",
    "image": "{{ site.url }}/assets/images/imgs/shamrat-profile.jpg"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Md. Shamrat Hossain Professional Services",
    "logo": {
      "@type": "ImageObject",
      "url": "{{ site.url }}/assets/images/imgs/shamrat-profile.jpg",
      "width": 400,
      "height": 400
    }
  },
  "datePublished": "{{ date | isoDate }}",
  "dateModified": "{{ date | isoDate }}",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ site.url }}{{ page.url }}"
  },
  "keywords": "{{ tags | default([]) | join(', ') }}",
  "articleSection": "{{ category | default('Blog') }}",
  "inLanguage": "en-US",
  "wordCount": "{{ content | striptags | replace(' ', '') | length }}",
  "timeRequired": "{{ content | readTime }}",
  "educationalLevel": "Professional",
  "about": [
    {% for tag in tags | default([]) %}
    {
      "@type": "Thing",
      "name": "{{ tag }}"
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ]
}
</script>
{% endif %}

